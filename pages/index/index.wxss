/**index.wxss**/
.item {
	position: relative;
	width: 100%;
	height: 21%;
	text-align: center;
}

.item-text {
	position: absolute;
	right: 0;
	top: 0;
	width: 128rpx;
	padding: 8rpx 0;
	background-color: rgba(0, 0, 0, 0.1);
	color: #fff;
	border-top-left-radius: 2rpx;
	border-bottom-left-radius: 2rpx; 
	font-size: 24rpx;
}

.bottom-scroll {
	position: absolute;
	bottom: 0;
	width: 100%;
	margin: 20rpx 0;
	white-space: nowrap;
}

.scroll-item {
	display: inline-block;
	width: 120rpx;
	height: 120rpx;
	margin-left: 16rpx;
	background: #f3f0f0; 
	border: 6rpx solid #fff;
}

.scroll-item:last-child {
	margin-right: 16rpx;
}

.active-item {
	box-shadow: 0 4rpx 16rpx rgba(39, 45, 50, 0.14);
}